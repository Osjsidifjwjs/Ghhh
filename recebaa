        showName = value
        print("Show Name:", value)
    end
})

Window:CreateToggle({
    Name = "HP Mostrar Vida (HP)",
    CurrentValue = true,
    Callback = function(value)
        showHealth = value
        print("Show Health:", value)
    end
})

Window:CreateToggle({
    Name = "Dist√¢ncia Mostrar Dist√¢ncia",
    CurrentValue = true,
    Callback = function(value)
        showDistance = value
        print("Show Distance:", value)
    end
})


Window:CreateSection("Ajustes Avan√ßados")

local delayBox = Instance.new("TextBox")
delayBox.Parent = Window.Main.Content.ScrollingFrame
delayBox.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
delayBox.TextColor3 = Color3.fromRGB(255, 255, 255)
delayBox.PlaceholderText = "Delay entre tiros (ex: 0.2)"
delayBox.Text = tostring(SHOT_DELAY)
delayBox.Font = Enum.Font.Gotham
delayBox.TextSize = 14
delayBox.Size = UDim2.new(1, 0, 0, 35)
delayBox.ClearTextOnFocus = false

local boxCorner = Instance.new("UICorner")
boxCorner.CornerRadius = UDim.new(0, 5)
boxCorner.Parent = delayBox

delayBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local num = tonumber(delayBox.Text)
        if num and num >= 0 then
            SHOT_DELAY = num
            print("SHOT_DELAY atualizado para:", SHOT_DELAY)
        else
            delayBox.Text = tostring(SHOT_DELAY)
        end
    end
end)


Window:CreateButton({
    Name = "Resetar Resetar Configura√ß√µes",
    Callback = function()
        print("Configura√ß√µes resetadas!")
    end
})

return Library